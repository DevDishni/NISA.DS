@using NISA.DS.Web.Models.TripTypes
@model IEnumerable<TripTypeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ticket)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var TripType in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => TripType.Ticket)
                </td>
                <td>
                    <a class="text-decoration-none me-2" asp-action="Edit" asp-route-id="@TripType.Id">
                        <i class="fa-solid fa-marker" title="Edit" data-bs-toggle="tooltip"></i>
                    </a>


                    <a class="text-decoration-none text-info me-2" asp-action="Details" asp-route-id="@TripType.Id">
                        <i class="fa-solid fa-circle-info" title="Details" data-bs-toggle="tooltip"></i>
                    </a>
                    <a class="text-decoration-none text-danger pointer" data-bs-toggle="modal" data-bs-target="#delete_@TripType.Id">
                        Delete
                    </a>

                    <div class="modal fade" id="delete_@TripType.Id">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Delete TripType</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <h5>Are you sure you want to delete this <span class="text-danger">Type</span>?</h5>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                                    <form asp-action="Delete">
                                        <input type="hidden" name="id" value="@TripType.Id" />
                                        <input type="submit" value="Delete" class="btn btn-danger" />
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
