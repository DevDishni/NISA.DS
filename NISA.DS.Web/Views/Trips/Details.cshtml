@using NISA.DS.Web.Models.Trip
@model TripDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">


    <div>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    </div>


    <div>

        <h4>Trip Details</h4>

        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FromPlanet)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FromPlanet)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ToPlanet)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ToPlanet)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PickUpDateTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PickUpDateTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rocket)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rocket.Brand)
                @Html.DisplayFor(model => model.Rocket.Model)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TripTypeTicket)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TripTypeTicket)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TicketType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TicketType)
            </dd>

        </dl>
    </div>

    <hr />

    <h4>
        Passengers
    </h4>

    <br />

    <table class="table">
        <thead>
            <tr>
                <th>
                    Full Name
                </th>
                <th>
                    Age
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var Passenger in Model.Passengers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Passenger.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Passenger.Age)
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>