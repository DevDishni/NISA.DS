@using NISA.DS.Web.Models.Rockets
@model IEnumerable<RocketListViewModel>

@{
    ViewData["Title"] = "Rockets";
}

<div class="container">

    <h4>Rockets</h4>

    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>

    <hr />

    <

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Brand)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AstronautFullName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Rocket in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Rocket.Brand)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Rocket.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Rocket.AstronautFullName)
                    </td>
                    <td>
                        <a class="text-decoration-none me-2" asp-action="Edit" asp-route-id="@Rocket.Id">
                            <i class="fa-solid fa-marker" title="Edit" data-bs-toggle="tooltip"></i>
                        </a>


                        <a class="text-decoration-none text-info me-2" asp-action="Details" asp-route-id="@Rocket.Id">
                            <i class="fa-solid fa-circle-info" title="Details" data-bs-toggle="tooltip"></i>
                        </a>
                        <a class="text-decoration-none text-danger pointer" data-bs-toggle="modal" data-bs-target="#delete_@Rocket.Id">
                            Delete
                        </a>

                        <div class="modal fade" id="delete_@Rocket.Id">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Delete Rocket</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <h5>Are you sure you want to delete <span class="text-danger">@Rocket.Brand @Rocket.Model</span>?</h5>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                                        <form asp-action="Delete">
                                            <input type="hidden" name="id" value="@Rocket.Id" />
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>